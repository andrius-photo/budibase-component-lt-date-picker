{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "lt-date-picker",
    "friendlyName": "lt-date-picker",
    "description": "Date picker that supports locale",
    "icon": "DateInput",
    "styles": [
      "padding",
      "size"
    ],
    "settings": [
      {
        "type": "field/datetime",
        "label": "Field",
        "key": "field",
        "required": true
      },
      {
        "type": "text",
        "label": "Label",
        "key": "label"
      },
      {
        "type": "text",
        "label": "Placeholder",
        "key": "placeholder",
        "defaultValue": "Enter a date"
      },
      {
        "type": "text",
        "label": "Default value",
        "key": "defaultValue"
      },
      {
        "type": "text",
        "label": "Earliest",
        "key": "min",
        "defaultValue": "2001-01-01 00:00:00"
      },
      {
        "type": "text",
        "label": "Latest",
        "key": "max"
      },
      {
        "type": "select",
        "label": "Locale",
        "key": "locale",
        "options": [
          "lt",
          "enGB",
          "bn",
          "da",
          "de",
          "es",
          "fr",
          "it",
          "ja",
          "ptBR",
          "ru",
          "zhCN"
        ],
        "defaultValue": "lt"
      },
      {
        "type": "boolean",
        "label": "Show calendar",
        "key": "showCalendar",
        "defaultValue": true
      },
      {
        "type": "boolean",
        "label": "Close on selection",
        "key": "closeOnSelection",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "label": "Disabled",
        "key": "disabled",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "label": "Ignore time zones",
        "key": "ignoreTimezones",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "label": "Custom format",
        "key": "customFormat",
        "defaultValue": false
      },
      {
        "type": "text",
        "label": "Format",
        "key": "format",
        "dependsOn": "customFormat",
        "defaultValue": "yyyy-MM-dd HH:mm:ss"
      },
      {
        "type": "validation/datetime",
        "label": "Validation",
        "key": "validation"
      },
      {
        "type": "event",
        "label": "On Change",
        "key": "onChange",
        "context": [
          {
            "label": "Field Value",
            "key": "value"
          }
        ]
      }
    ]
  }
}